@model ResourceBlender.Common.ViewModels.ResourceViewModel
@{
  ViewBag.Title = "Add a resource";
}

<h2>Add a new resource</h2>
@using (Html.BeginForm("AddResource", "Resources", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  <div class="container">
    <div class="form-group">
      @Html.LabelFor(model => model.ResourceString)
      @Html.EditorFor(model => model.ResourceString, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.ResourceString, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.RomanianTranslation)
      @Html.EditorFor(model => model.RomanianTranslation, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.RomanianTranslation, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.EnglishTranslation)
      @Html.EditorFor(model => model.EnglishTranslation, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.EnglishTranslation, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Add" class="btn btn-success" />
    @Html.ActionLink("Back to homepage", "Index", "Resources", new { @class = "btn btn-info"})
  </div>
}